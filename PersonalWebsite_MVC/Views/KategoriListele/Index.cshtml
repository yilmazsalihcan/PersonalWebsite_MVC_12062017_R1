
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using PersonalWebsite_MVC.Models;

@model List<Categories>

<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
               Kategori Listele
            </div>
            <div class="block-controls">
                
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Categories kat in Model)
                        {
                            <tr>
                            <td>@kat.CategoryName</td>
                            <td><a href="#" class="btn btn-warning rounded">Düzenle</a></td>
                            <td><a href="/KategoriListele/KategoriSil/@kat.CategoryId" class="btn btn-danger rounded">Sil</a></td>
                            
                             </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
