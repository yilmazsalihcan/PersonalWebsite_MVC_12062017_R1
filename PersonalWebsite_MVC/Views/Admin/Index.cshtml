
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using PersonalWebsite_MVC.Models;

@model List<Categories>

<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
               Blog Ekleme Sayfası
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <form id="hidingSuccessForm" method="post" action="/Admin/BlogEkle">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="title" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="abstract" rows="5"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label>Session type</label>
                        <select class="form-control" name="sessionType" style="width: 200px;">
                            
                             @foreach (var kat in Model)
                             {
                                 <option value="@kat.CategoryId">@kat.CategoryName</option>
                             }                         
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Blog Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


